<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_invitationpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.dalal.gpnew.invitationpage">

    <ImageButton
        android:onClick="Back"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/arow"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:background="@drawable/zwara_word"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:onClick="profile"
        android:layout_width="80dp"
        android:layout_height="71dp"
        tools:layout_editor_absoluteY="71dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/imageButton3"
        android:scaleType="fitXY"
        android:background="@drawable/pers"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView" />

    <TextView
        android:onClick="send"
        android:text=""
        android:background="@drawable/sendinv"
        android:layout_width="1000sp"
        android:layout_height="100sp"
        android:id="@+id/textView24"
        android:layout_below="@+id/textView16"
     />

    <TextView
        android:onClick="resev"
        android:text=""
        android:background="@drawable/receved"
        android:layout_width="1000sp"
        android:layout_height="100sp"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView22"
        />

    <TextView
        android:onClick="saved"
        android:text=""
        android:background="@drawable/myinitations"
        android:layout_width="1000sp"
        android:layout_height="100sp"
        android:id="@+id/textView23"
        android:textStyle="normal|bold"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/textView27"
         />

    <TextView
        android:onClick="create"
        android:text=""
        android:background="@drawable/create"
        android:layout_width="1000sp"
        android:layout_height="100sp"
        android:id="@+id/textView22"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView23"
         />

</RelativeLayout>
