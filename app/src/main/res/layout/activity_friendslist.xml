<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_friendslist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.dalal.gpnew.friendslist">


    <CheckedTextView
        android:textColor="#8B4513"
        android:textSize="20sp"
        android:layout_height="50sp"
        android:layout_width="400sp"
        android:background="@drawable/picture3"
        android:text="   سارة :الحمد لله"
        android:id="@+id/checkedTextView3"
        android:layout_marginTop="25dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/checkedTextView4"
        tools:ignore="RtlCompat" />

    <CheckedTextView
        android:textAlignment="gravity"
        android:textColor="#8B4513"
        android:textSize="20sp"
        android:layout_height="50sp"
        android:layout_width="400sp"
        android:background="@drawable/picture3"
        android:text="   ليلى :مرة مشغول"
        android:id="@+id/checkedTextView2"
        android:layout_marginTop="162dp"
        android:layout_below="@+id/textView26"
         />

    <CheckedTextView
        android:textAlignment="gravity"
        android:textColor="#8B4513"
        android:textSize="20sp"
        android:layout_height="50sp"
        android:layout_width="400sp"
        android:background="@drawable/picture3"
        android:text="   احمد :مشغول"
        android:id="@+id/checkedTextView4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/checkedTextView2"
         />

    <TextView
        android:text="الاصدقاء"
        android:textColor="#D98518"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView26"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/textView35" />

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:layout_alignTop="@+id/checkedTextView2"

        android:layout_above="@+id/checkedTextView4" />

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox4"
        android:layout_alignTop="@+id/checkedTextView4"
        android:layout_above="@+id/checkedTextView3" />

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox5"
        android:layout_alignTop="@+id/checkedTextView3"
        android:layout_alignBottom="@+id/checkedTextView3" />

    <TextView
        android:text="اختر الاصدقاء للارسال"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/textView36"
        android:textStyle="normal|bold"
        android:textColor="#7a5a23"
        android:layout_below="@+id/textView35"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text=""
        android:layout_width="40sp"
        android:background="@drawable/person"
        android:layout_height="35sp"
        android:id="@+id/textView28"
        android:layout_alignBaseline="@+id/textView27"
        android:layout_alignBottom="@+id/textView27"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text=""
        android:background="@drawable/zwara_word"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:id="@+id/textView26"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textView28"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_alignBottom="@+id/textView28" />

    <TextView
        android:text=""
        android:background="@drawable/arow"
        android:layout_width="40sp"
        android:layout_height="35sp"
        android:id="@+id/textView27"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
