<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_friendslist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.dalal.gpnew.friendslist">

    <ImageButton
        android:onClick="Back"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:background="@drawable/arow"
        android:id="@+id/imageButton2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:background="@drawable/zwara_word"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:onClick="profile"
        android:layout_width="80dp"
        android:layout_height="71dp"
        tools:layout_editor_absoluteY="71dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/imageButton3"
        android:scaleType="fitXY"
        android:background="@drawable/pers"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/imageView" />


    <CheckedTextView
        android:textColor="#8B4513"
        android:textSize="20sp"
        android:layout_height="50sp"
        android:layout_width="400sp"
        android:background="@drawable/picture3"
        android:text="   سارة :الحمد لله"
        android:id="@+id/checkedTextView3"
        android:layout_marginTop="25dp"
        android:textAlignment="textStart"
        android:layout_below="@+id/checkedTextView4"
        tools:ignore="RtlCompat" />

    <CheckedTextView
        android:textAlignment="gravity"
        android:textColor="#8B4513"
        android:textSize="20sp"
        android:layout_height="50sp"
        android:layout_width="400sp"
        android:background="@drawable/picture3"
        android:text="   ليلى :مرة مشغول"
        android:id="@+id/checkedTextView2"
        android:layout_marginTop="162dp"
        android:layout_below="@+id/textView26"
         />

    <CheckedTextView
        android:textAlignment="gravity"
        android:textColor="#8B4513"
        android:textSize="20sp"
        android:layout_height="50sp"
        android:layout_width="400sp"
        android:background="@drawable/picture3"
        android:text="   احمد :مشغول"
        android:id="@+id/checkedTextView4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/checkedTextView2"
         />

    <TextView
        android:id="@+id/textView35"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="الاصدقاء"
        android:textColor="#D98518"
        android:textSize="30sp"
        android:textStyle="bold" />

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:layout_alignTop="@+id/checkedTextView2"

        android:layout_above="@+id/checkedTextView4" />

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox4"
        android:layout_alignTop="@+id/checkedTextView4"
        android:layout_above="@+id/checkedTextView3" />

    <CheckBox
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox5"
        android:layout_alignTop="@+id/checkedTextView3"
        android:layout_alignBottom="@+id/checkedTextView3" />

    <TextView
        android:id="@+id/textView36"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBox3"
        android:layout_centerHorizontal="true"
        android:text="اختر الاصدقاء للارسال"
        android:textColor="#7a5a23"
        android:textSize="24sp"
        android:textStyle="normal|bold" />





</RelativeLayout>
